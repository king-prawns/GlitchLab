{
  "name": "glitchlab",
  "version": "0.0.1",
  "description": "Where your video player learns to survive chaos",
  "main": "dist/glitchlab.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/king-prawns/GlitchLab.git"
  },
  "author": "king-prawns",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/king-prawns/GlitchLab/issues"
  },
  "homepage": "https://github.com/king-prawns/GlitchLab#readme",
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write --config ./config/prettier/.prettierrc",
      "eslint --config ./config/eslint/eslint.config.mjs --no-error-on-unmatched-pattern --fix"
    ]
  },
  "scripts": {
    "prepare": "ts-patch install -s && husky",
    "pre:commit": "lint-staged",
    "lint": "eslint --config ./config/eslint/eslint.config.mjs \"./src/**/*.ts\"",
    "prettier": "prettier --config ./config/prettier/.prettierrc --list-different \"src/**/*.ts\" --ignore-path ../config/prettier/.prettierignore",
    "typecheck": "tsc -p ./config/typescript/tsconfig.json --noEmit",
    "dev": "ts-node-dev --project ./config/typescript/tsconfig.json ./config/rspack/dev.ts",
    "build": "ts-node --project ./config/typescript/tsconfig.prod.json ./config/rspack/prod.ts && tsc -p ./config/typescript/tsconfig.prod.json",
    "build:analyze": "ts-node --project ./config/typescript/tsconfig.prod.json ./config/rspack/prod.ts --analyze"
  },
  "devDependencies": {
    "@rsdoctor/rspack-plugin": "1.3.7",
    "@rspack/core": "1.6.0",
    "@rspack/dev-server": "1.1.4",
    "@types/node": "24.10.0",
    "chalk": "4.1.2",
    "css-loader": "7.1.2",
    "eslint": "9.39.1",
    "eslint-plugin-import": "2.32.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.6",
    "prettier": "3.6.2",
    "style-loader": "4.0.0",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0",
    "ts-patch": "3.3.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.3"
  }
}
